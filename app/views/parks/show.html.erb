<h1>Park</h1>

<p>
  <strong>Name:</strong>
  <%= @park.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @park.description %>
</p>

<p>
  <%= cl_image_tag(@park.picture, :width => 200, :height => 200, :crop => :fill) %>
</p>

<%= link_to 'Edit', edit_park_path(@park) %> |
<%= link_to 'Destroy', @park, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', parks_path %>
